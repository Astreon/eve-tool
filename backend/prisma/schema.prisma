generator client {
  provider = "prisma-client"
  output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Character {
  id             Int      @id
  name           String // maybe @unique
  bloodlineId    Int
  corporationId  Int
  raceId         Int
  securityStatus Int
  lastUpdated    DateTime @default(now())

  bloodline Bloodline @relation(fields: [bloodlineId], references: [id])
  race      Race      @relation(fields: [raceId], references: [id])
}

model Bloodline {
  id        Int         @id
  name      String
  Character Character[]
}

model Race {
  id        Int         @id
  name      String
  Character Character[]
}
