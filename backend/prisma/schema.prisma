generator client {
  provider = "prisma-client"
  output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Version {
  key         String   @id
  buildNumber Int      @unique
  releaseDate DateTime
}

model Character {
  id             Int       @id
  name           String    @unique
  bloodlineId    Int
  corporationId  Int
  raceId         Int
  securityStatus Float?
  etag           String?   @db.Text
  lastModified   DateTime?
  expiresAt      DateTime?
  updatedAt      DateTime  @updatedAt

  bloodline Bloodline @relation(fields: [bloodlineId], references: [id])
  race      Race      @relation(fields: [raceId], references: [id])

  @@index([expiresAt])
}

model Bloodline {
  id        Int         @id
  name      String      @unique
  Character Character[]
}

model Race {
  id        Int         @id
  name      String      @unique
  Character Character[]
}

model Faction {
  id   Int    @id
  name String @unique
}

model SolarSystem {
  id   Int    @id
  name String @unique
}

model Constellation {
  id   Int    @id
  name String @unique
}

model Region {
  id   Int    @id
  name String @unique
}
